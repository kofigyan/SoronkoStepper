<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="SoronkoStepperView">

        <attr name="ssv_currentStateNumber" format="enum">
            <enum name="one" value="1"/>
            <enum name="two" value="2"/>
            <enum name="three" value="3"/>
            <enum name="four" value="4"/>
            <enum name="five" value="5"/>
        </attr>

        <attr name="ssv_maxStateNumber" format="enum">
            <enum name="one" value="1"/>
            <enum name="two" value="2"/>
            <enum name="three" value="3"/>
            <enum name="four" value="4"/>
            <enum name="five" value="5"/>
        </attr>

        <attr name="ssv_stateBackgroundColor" format="color"/>
        <attr name="ssv_stateForegroundColor" format="color"/>

        <attr name="ssv_stateNumberBackgroundColor" format="color"/>
        <attr name="ssv_stateNumberForegroundColor" format="color"/>
        <attr name="ssv_currentStateDescriptionColor" format="color"/>
        <attr name="ssv_stateDescriptionColor" format="color"/>

        <attr name="ssv_checkStateCompleted" format="boolean"/>
        <attr name="ssv_animationStartDelay" format="integer"/>

        <attr name="ssv_stateTextSize" format="dimension"/>
        <attr name="ssv_stateSize" format="dimension"/>

    </declare-styleable>


    <declare-styleable name="CircularTextView">

        <attr name="ctv_stateBackgroundColor" format="color"/>
        <attr name="ctv_stateForegroundColor" format="color"/>

        <attr name="ctv_stateSize" format="dimension"/>
        <attr name="ctv_stateTextSize" format="dimension"/>
        <attr name="ctv_stateDescriptionSize" format="dimension"/>

        <!--<attr name="ctv_strokeWidth" format="dimension" />-->
        <attr name="ctv_strokeWidth" format="dimension"/>

    </declare-styleable>

</resources>